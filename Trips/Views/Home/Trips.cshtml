@{
    ViewData["Title"] = "Trip Details";
}

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/png" href="../Icon.png" />
        <link rel="stylesheet"
              href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
              integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
              crossorigin="anonymous" />
        <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/style.css" />
        <script src="~/lib/bootstrap/jquery-3.4.1.min.js"></script>
        <script src="~/lib/bootstrap/three.js"></script>
        <script src="~/lib/bootstrap/OBJLoader.js"></script>
        <script src="~/lib/bootstrap/models/SceneLoader.js"></script>
        <script src="~/lib/bootstrap/trip/TripGraph.js"></script>
        <script src="~/lib/bootstrap/trip/TripAnalysis.js"></script>
        <title>Trip Analysis</title>
    </head>
<body>

    <div>
        <div id="loader" class="flex-column flex-center">
            @*<div id="loading-message">Please enter the TripId you would like to search for.</div>*@
            <div class="flex-row flex-center full-height">
            </div>
        </div>
        
        <div id="InputBox" class="input-group mb-3" style="z-index:1000; padding-right:5%; padding-bottom:0%">
            <div id="heading" style="padding-right:5%;padding-left:10%;">Please enter the TripId you would like to search for.</div> 
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">id</span>
            </div>
            <input id="TripID" type="text" class="form-control" placeholder="Trip Id" aria-label="TripID" aria-describedby="basic-addon1">
            <div class="input-group-prepend">
                <button class="btn btn-outline-secondary" id="btnEnter" type="button">Enter</button>
            </div>
        </div>

        <div class="flex-row">
            <div id="list-container">
                <div id="list" class="flex-column"></div>
            </div>
            <div class="flex-column">
                <div class="flex-row">
                    <div class="half">
                        <div id="tabs" class="flex-row flex-center">
                            <div id="trip-details-tab" class="button">Trip Details</div>
                        </div>
                        <div id="renderer"></div>
                        <div id="trip-details"></div>
                    </div>
                    <div id="map">
                        <div id="google-map"></div>
                    </div>
                </div>
                <div id="container">
                    <canvas id="graph" width="300" height="260"> </canvas>
                </div>
                <div id="controls" class="flex-row flex-center">
                    <div id="step-backward" class="button">
                        <i class="fas fa-step-backward"></i>
                    </div>
                    <div id="stop" class="button"><i class="fas fa-stop"></i></div>
                    <div id="step-forward" class="button">
                        <i class="fas fa-step-forward"></i>
                    </div>
                    <div id="play" class="button"><i class="fas fa-play"></i></div>
                    <div id="play5" class="button"><i class="fas fa-play"></i> 5X</div>
                    <div id="play10" class="button"><i class="fas fa-play"></i> 10X</div>
                </div>
            </div>
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhxd22XiQVzr8mGovxfzncw92soL6vIzA&callback=initMap"></script>
    </div>
</body>
